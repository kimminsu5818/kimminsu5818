#include <iostream>
using namespace std;

void main() {
    // matrix in 1D
    int N = 2, M = 2, K = 2; // 행렬 A의 크기: N x K, 행렬 B의 크기: K x M
    float A[] = { 0, 1, 10, 100 }, * B, * C;
    B = new float[K * M];
    C = new float[N * M];

    B[0] = 7; B[1] = 4;
    B[2] = 1; B[3] = 9;


    // C = A * B
    for (int n = 0; n < N; n++) {
        for (int m = 0; m < M; m++) {
            C[n * M + m] = 0;
            for (int k = 0; k < K; k++) {
                C[n * M + m] += A[n * K + k] * B[k * M + m];
            }
        }
    }

    // show results
    for (int n = 0; n < N; n++) {
        for (int m = 0; m < M; m++) {
            cout << C[n * M + m] << "  ";
        }
        cout << endl;
    }
    delete[] B;
    delete[] C;
}
